library ieee;
use ieee.std_logic_1164.all;
use ads.ads_complex_pkg.all;

set_location_assignment PIN_F15 -to sw9

entity fractal_select is
	port (
		sw9: 				in	std_logic;
		position: 		in ads_complex;
		c: 				out ads_complex;
		z:				 	out ads_complex
		
	);
end entity ;

architecture fract_slct of fractal_select is
	constant julia_c: ads_complex := ads_cmplx(to_sfixed(0) to_sfixed(2));
begin
	find_fractal: process(sw9) is
	begin
		if sw9 = '1' then
			--sets starting condition for julian: z is converted to a complex number
			z <= position;
			c <= julia_c;
		elsif sw9 = '0' then
			--sets starting conditions for mandle: c on the screen converted to a complex number
			z <= ads_cmplx(to_sfixed(0) to_sfixed(0));
			c <= position;
		end if;
	
	end process find_fractal;

end architecture fract_slct;

